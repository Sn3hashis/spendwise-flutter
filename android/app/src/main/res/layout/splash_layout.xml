    android:layout_height="match_parent"
    android:background="#FF007AFF"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/splash_icon" />

    <TextView
